$TTL	604800
{{ hostname }}.{{ domain }}.	IN	SOA	{{ hostname }}.{{ domain }}. admin.{{ domain }}. (
			      2		; Serial
			 604800		; Refresh
			  86400		; Retry
			2419200		; Expire
			 604800 )	; Negative Cache TTL
;

@			   				IN  NS			 {{ hostname }}.{{ domain }}
{{ hostname }}.{{ domain }} IN  NS  		 {{ ansible_default_ipv4.address }}
{% for d in dns_record %}
{{ d.name }}   				IN  {{ d.type }} {{ d.ip }}
{% endfor %}